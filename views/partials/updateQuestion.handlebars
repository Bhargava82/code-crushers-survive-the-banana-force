<form id="updateQuestion" class="is-hidden">
  <div class="field">
    <label class="label">Question</label>
    <div class="control">
      <textarea class="textarea" id="question"></textarea>
    </div>
  </div>

  <div class="field">
    <label class="label">Option A</label>
    <div class="control">
      <textarea class="textarea" id="optionA"></textarea>
    </div>
  </div>

  <div class="field">
    <label class="label">Option B</label>
    <div class="control">
      <textarea class="textarea" id="optionB"></textarea>
    </div>
  </div>

  <div class="field">
    <label class="label">Option C</label>
    <div class="control">
      <textarea class="textarea" id="optionC"></textarea>
    </div>
  </div>

  <div class="field">
    <label class="label">Option D</label>
    <div class="control">
      <textarea class="textarea" value="{{optionD}}" id="optionD"></textarea>
    </div>
  </div>

  <div class="field">
    <label class="label">Answer</label>
    <div class="control">
      <textarea class="textarea" id="answer"></textarea>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
  </div>
</form>

<script type="text/javascript" src="/assets/js/updateQuestion.js"></script>