{{!-- Modal to start --}}
<div id="modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">STARTING GAME!</p>
        </header>
        <section class="modal-card-body">
            <!-- Content ... -->
            GET READY!!!
        </section>
        <footer class="modal-card-foot">
            <button id="startBttn" class="button is-success">Start</button>
        </footer>
    </div>
</div>
<div class="container" id="landing-section">
    <div class="columns" id="qaSection">
        <div class="column">
            <div class="tile question notification has-background-grey-lighter">
                <section id="questionSection" class="cch2">
                    Enter question here and choices
                </section>
                <section id="answerChoices">
                    Enter question here and choices
                </section>
            </div>
        </div>
    </div>
    {{!-- column for space --}}
    <div class="columns">
        <div class="column is-full prog-above"></div>
    </div>
    <div class="columns">
        {{!-- <div class="column">
            <p class="tile placeholder"></p>
        </div> --}}
        <div class="column is-flex is-horizontal-center is-multiline"><progress id="userProgressBar"
                class="progress is-success is-large" value="100" max="100"></progress></div>

        <div class="column is-flex is-horizontal-center is-multiline"></div>
        <div class="column is-flex is-horizontal-center is-multiline"><progress id="opponentProgressBar"
                class="progress is-large" value="25" max="100"></progress></div>
    </div>
    {{!-- column for space --}}
    <div class="columns">
        <div class="column is-full prog-bottom"></div>
    </div>
    <div class="columns">
        <div class="column is-flex is-horizontal-center is-multiline">
            <img src="/assets/user.png" id="userImage" class="my-element minion animate__animated animate__bounce"
                alt="raaarrrr" />{{!-- changed 12/17 --}}
        </div>
        <div class="column is-flex is-horizontal-center is-multiline ">
            <img id="animatedGif" src="" alt="" class="is-hidden" />
        </div>
        <div class="column is-flex is-horizontal-center is-multiline" id="opponentSection">
            <img id="opponentImage" src="/assets/minion_no_armor.png" class="minion" alt="raaarrrr" />
        </div>
    </div>
    <div class="columns">
        <div class="column is-flex is-horizontal-center is-multiline">

        </div>
        <div class="column is-flex is-horizontal-center is-multiline ">
            {{!-- MUSIC! https://www.fesliyanstudios.com/royalty-free-music/downloads-c/action-music/9 --}}
            {{!-- Auto Play Music:
            https://stackoverflow.com/questions/14356956/playing-audio-after-the-page-loads-in-html/14357365--}}
            <audio controls autoplay volume="0.0025" loop>
                <source src="/assets/StartMusic.mp3" type="audio/mp3">
                Your browser does not support the audio element.
            </audio>
        </div>
        <div class="column is-flex is-horizontal-center is-multiline" id="opponentSection">

        </div>
    </div>
</div>

<div class="modal" id="winModal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <p class="image is-4by3">
            <img src="/assets/minion_win.png" alt="winner minion">
        </p>
    </div>
    <button class="modal-close is-large" id="closeWinModal" aria-label="close"></button>
</div>

<div class="modal" id="loseModal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <p class="image is-4by3">
            <img src="/assets/minion_lose.png" alt="losing minion">
        </p>
    </div>
    <button class="modal-close is-large" id="closeLoseModal" aria-label="close"></button>
</div>

<div class="modal" id="roundModal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <p class="image is-4by3">
            <img src="/assets/minion_no_armor.png" alt="minion journey">
        </p>
    </div>
    <button class="modal-close is-large" id="closeRoundModal" aria-label="close"></button>
</div>




